# Basic Settings
set shell bash
set hidden true
set info size:time
set ignorecase true
set drawbox true
set findlen 0
set ratios 1:3:2

# Custom Functions
cmd open ${{
    case $(file --mime-type "$f" -bL) in
        text/*|application/json) $EDITOR "$f";;
        *) xdg-open "$f" ;;
    esac
}}

cmd jump %lf -remote "send $id cd \"$1\""

cmd mkdir %{{
  printf "Directory Name: "
  read ans
  mkdir $ans
}}

cmd mkfile %{{
  printf "File Name: "
  read ans
  touch $ans
}}

cmd unarchive ${{
  case "$f" in
      *.zip) unzip "$f" ;;
      *.tar.gz) tar -xzvf "$f" ;;
      *.tar.bz2) tar -xjvf "$f" ;;
      *.tar) tar -xvf "$f" ;;
      *) echo "Unsupported format" ;;
  esac
}}

cmd zip %zip -r "$f" "$f"
cmd tar %tar cvf "$f.tar" "$f"
cmd targz %tar cvzf "$f.tar.gz" "$f"
cmd tarbz2 %tar cjvf "$f.tar.bz2" "$f"

# Bindings
# Remove some defaults
map m
map o
map "'"
map '"'
map e
map z
map h

# Basic Functions
map . set hidden!
map <delete> delete
map mf mkfile
map md mkdir
map ee $$EDITOR "$f"
map es $sudo $EDITOR "$f"

# Archive

map az zip
map at tar
map ag targz
map ab tarbz2
map au unarchive

# Movement
map <enter> open
map <backspace> updir
map <backspace2> updir
map gh cd ~
map gc cd ~/.config
map gD cd ~/Documents
map gd cd ~/Downloads
map gt cd ~/Downloads/Telegram\ Desktop
map gp cd ~/Projects
map gj push :jump<space>
